<AuButtonGroup class="au-o-box" @inline={{true}}>
  <LinkTo @route="task.input-containers-files">
    <AuButton>
      {{t "jobs.tasks.icf.link_input"}}
    </AuButton>
  </LinkTo>
  <LinkTo @route="task.results-containers-files">
    <AuButton>
      {{t "jobs.tasks.icf.link_result"}}
    </AuButton>
  </LinkTo>
  <LinkTo @route="task.input-containers-graph">
    <AuButton >
      {{t "jobs.tasks.icf.link_input_graphs"}}
    </AuButton>
  </LinkTo>
  <LinkTo @route="task.results-containers-graph">
    <AuButton >
      {{t "jobs.tasks.icf.link_result_graphs"}}
    </AuButton>
  </LinkTo>
  <LinkTo @route="task.input-containers-harvesting-collections">
    <AuButton @skin="secondary" class="is-active">
      {{t "jobs.tasks.icf.link_remote"}}
    </AuButton>
  </LinkTo>
</AuButtonGroup>

<AuHeading @skin="3" class="au-o-box">
  {{t "jobs.ichc.title"}}
</AuHeading>

{{#let (t "jobs.ichc.data.nodata")
       (t "jobs.ichc.data.uri")
       (t "jobs.ichc.data.source")
  as | nodata uri so |}}
  <AuDataTable
    @content={{this.model}}
    @noDataMessage="No remote-data-objects found"
    as |t|>
    <t.content as |c|>
      <c.header>
      <th class="au-u-visible-small-up">{{uri}}</th>
      <th class="au-u-visible-small-up">{{so}}</th>
      </c.header>
      <c.body as |row|>
        <td class="au-u-visible-small-up">
          {{row.uri}}
        </td>
        <td class="au-u-visible-small-up">
          {{row.source}}
        </td>
      </c.body>
    </t.content>
  </AuDataTable>
{{/let}}
