<AuToolbar @border="bottom" @size="large">
  <AuToolbarGroup class="au-c-toolbar__group--row au-c-toolbar_space-between">
  <AuHeading @skin="2">{{t "jobs.details.title"}}</AuHeading>

    <AuButtonGroup>
    {{#if this.deleteJob.isRunning}}
      <AuLoader @padding="small" />
     {{else}}
       <AuButton @alert={{true}} {{on "click" (perform this.deleteJob this.model)}}>
        {{t "jobs.details.delete"}}
       </AuButton>
    {{/if}}
    <LinkTo @route="index">
      <AuButton  @skin="secondary">
        {{t "jobs.details.back"}}
      </AuButton>
    </LinkTo>
    </AuButtonGroup>
  </AuToolbarGroup>
  <AuToolbarGroup class="au-c-toolbar__group--row">
    <ul class="au-o-grid">
      <li class="au-o-grid__item au-u-1-2 au-u-1-6@medium">
        <AuLabel>{{t "jobs.details.uri"}}</AuLabel>
        <p class="au-word-wrap">{{this.model.uri}}</p>
      </li>
      <li class="au-o-grid__item au-u-1-2 au-u-1-6@medium">
        <AuLabel>{{t "jobs.details.creator"}}</AuLabel>
        <p class="au-word-wrap">{{this.model.creator.label}}</p>
      </li>
      <li class="au-o-grid__item au-u-1-2 au-u-1-6@medium">
        <AuLabel>{{t "jobs.details.created"}}</AuLabel>
         {{format-date this.model.created 'dd/MM/yyyy HH:mm:ss'}}
      </li>
      <li class="au-o-grid__item au-u-1-2 au-u-1-6@medium">
        <AuLabel>{{t "jobs.details.modified"}}</AuLabel>
        {{format-date this.model.modified 'dd/MM/yyyy HH:mm:ss'}}
      </li>
      <li class="au-o-grid__item au-u-1-2 au-u-1-6@medium">
        <AuLabel>{{t "jobs.details.status"}}</AuLabel>
        <StatusPill @status={{this.model.status}} />
      </li>
      <li class="au-o-grid__item au-u-1-2 au-u-2-6@medium">
        {{#if this.model.error.message}}
        <AuAlert @icon="cross" @title={{t "jobs.details.error_title"}} @skin="error">
          <p class="au-word-wrap">{{this.model.error.message}}</p>
        </AuAlert>
        {{/if}}
      </li>
    </ul>
  </AuToolbarGroup>
</AuToolbar>

{{outlet}}
