<AuToolbar @border="bottom" @size="large">
  <AuToolbarGroup class="au-c-toolbar__group--row au-c-toolbar_space-between">
    <AuHeading @skin="2">{{t "jobs.tasks.title"}}</AuHeading>
    <AuButtonGroup>
      <LinkTo @route="index">
        <AuButton  @skin="secondary">
          {{t "jobs.tasks.back"}}
        </AuButton>
      </LinkTo>
    </AuButtonGroup>
  </AuToolbarGroup>
  <AuToolbarGroup class="au-c-toolbar__group--row">
    <ul class="au-o-grid">
      <li class="au-o-grid__item au-u-1-2 au-u-1-6@medium">
        <AuLabel>{{t "jobs.tasks.uri"}}</AuLabel>
        <p class="au-word-wrap">{{this.model.uri}}</p>
      </li>
      <li class="au-o-grid__item au-u-1-2 au-u-1-6@medium">
        <AuLabel>{{t "jobs.tasks.operation"}}</AuLabel>
        <p class="au-word-wrap">{{this.model.operation.label}}</p>
      </li>
      <li class="au-o-grid__item au-u-1-2 au-u-1-6@medium">
        <AuLabel>{{t "jobs.tasks.created"}}</AuLabel>
         {{format-date this.model.created 'dd/MM/yyyy HH:mm:ss'}}
      </li>
      <li class="au-o-grid__item au-u-1-2 au-u-1-6@medium">
        <AuLabel>{{t "jobs.tasks.modified"}}</AuLabel>
        {{format-date this.model.modified 'dd/MM/yyyy HH:mm:ss'}}
      </li>
      <li class="au-o-grid__item au-u-1-2 au-u-1-6@medium">
        <AuLabel>{{t "jobs.tasks.status"}}</AuLabel>
        <StatusPill @status={{this.model.status}} />
      </li>
      <li class="au-o-grid__item au-u-1-2 au-u-2-6@medium">
        {{#if this.model.error.message}}
        <AuAlert @icon="cross" @title={{t "jobs.tasks.error_title"}} @skin="error">
          <p class="au-word-wrap">{{this.model.error.message}}</p>
        </AuAlert>
        {{/if}}
      </li>
    </ul>
  </AuToolbarGroup>
</AuToolbar>

{{outlet}}
